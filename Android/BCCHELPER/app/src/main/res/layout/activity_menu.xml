<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <Button
            android:id="@+id/startCHEM"
            android:layout_width="257dp"
            android:layout_height="141dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:text="Схемотехника"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/startAVTOMAT"
            android:layout_width="257dp"
            android:layout_height="141dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="24dp"
            android:text="Теория автоматов"
            app:layout_constraintEnd_toEndOf="@+id/startMatch"
            app:layout_constraintStart_toStartOf="@+id/startMatch"
            app:layout_constraintTop_toBottomOf="@+id/startMatch" />

        <Button
            android:id="@+id/startMatch"
            android:layout_width="257dp"
            android:layout_height="141dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="24dp"
            android:text="Дискретная математика"
            app:layout_constraintEnd_toEndOf="@+id/startCHEM"
            app:layout_constraintStart_toStartOf="@+id/startCHEM"
            app:layout_constraintTop_toBottomOf="@+id/startCHEM" />

        <ImageView
            android:id="@+id/logo"
            android:layout_width="57dp"
            android:layout_height="55dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:src="@drawable/logo"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.8"
            app:layout_constraintStart_toEndOf="@+id/startAVTOMAT" />
    </android.support.constraint.ConstraintLayout>

</RelativeLayout>